<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.popularmovies.FilmDetailActivity"
    android:layout_margin="15dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/gunforhire"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="5dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/movie_title"
            android:text="Rating"
            android:padding="5dp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"/>
        <TextView
            android:id="@+id/overview"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_title"
            android:padding="5dp"
            android:text="Overview" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rating">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Descriptions of movies live here. Synopsis and what not. Spoilers. Plot. Premise. Drama. Comedy. Action. Mystery. Horror. Romance. Art." />

        </ScrollView>
    </RelativeLayout>
</LinearLayout>
